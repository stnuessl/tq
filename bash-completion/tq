_tq()
{
    local cur prev opts
    
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--add-bookmark
          --channels
          --check-bookmarks
          --descriptive
          --featured
          --game
          --get-bookmarks
          --help
          --json
          --limit
          --live
          --no-section
          --open
          --open-args
          --remove-bookmarks
          --search-channels
          --search-games
          --search-streams
          --show-shortcuts
          --streams
          --top
          --user
          --verbose"

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    
    return 0
}

complete -F _tq tq